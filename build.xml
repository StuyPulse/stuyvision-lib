<project name="stuy-vision-2016" default="compile-and-run" basedir=".">
    <!--
        Before running for the first time, run the following (but
        use two dashes):
        $ sudo update-alternatives -config java
        $ sudo update-alternatives -config javac
        and choose Java 8

        jfxrt.jar file came from <JRE_HOME>/lib/ext/jfxrt.jar on a
        Windows machine
    -->
    <property name="opencv_home"
        value="${basedir}/lib/opencv-3.0.0" />
    <property name="opencv"
        value="${opencv_home}/build/bin/opencv-300.jar" />
    <property name="javafx" value="/usr/lib/jvm/jfxrt.jar" />
    <property name="junit" value="${basedir}/lib/junit.jar" />
    <property name="jssc" value="${basedir}/lib/jssc-2.8.0.jar" />
   
    <path id="jars">
        <pathelement path="${opencv}" />
        <pathelement path="${javafx}" />
        <pathelement path="${junit}" />
        <pathelement path="${basedir}/bin" />
        <pathelement path="${jssc}" />
    </path>
    
    <target name="compile-and-run" depends="compile, run" />

    <target name="run" depends="configure-camera">
        <java classname="modules.StuyVisionModule"
            classpathref="jars"
            dir="${basedir}/bin"
            failonerror="true" />
    </target>

    <target name="configure-camera">
        <exec executable="/bin/bash">
            <arg value="setup_camera.sh" />
        </exec>
    </target>

    <target name="compile" depends="init">
        <javac srcdir="src"
            destdir="bin"
            source="1.8"
            target="1.8"
            verbose="true"
            classpathref="jars" />
    </target>
 
    <target name="init">
        <delete dir="bin" />
        <mkdir dir="bin" />
    </target>
</project>
